# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:8000

# MongoDB Configuration
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb://username:password@host:port/hr_performance?authSource=admin
MONGODB_DB_NAME=hr_performance

# JWT Configuration
# Generate a strong random secret for production: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=12
